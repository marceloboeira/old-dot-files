[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[user]
  name = Marcelo Boeira
  email = me@marceloboeira.com
[alias]
  a = add
  A = add -A 
  b = branch
  br = branch
  bl = blame
  co = checkout
  cm = commit -m 
  cma = commit -am 
  cmam = commit --amend
  d = diff
  dc = diff --cached
  dt = difftool
  m = merge
  mg = merge
  pl = pull
  plr = pull --rebase
  plom = pull origin master
  ps = push
  psom = push origin master
  ranking = shortlog -s -n
  rs = reset
  rb = rebase
  rbi = rebase -i
  st = status
  s = status
  shame = "!s() { git blame $1 -p | grep 'author ' | cut -d' ' -f2-10 | sort | uniq -c | sort | tail -n1 | cut -c6-30 ; }; s"  
  shout = "!s() { git shame $1 | say; }; s"
  tg = tag 
  l = log
  lg = log --graph --pretty=format:'%C(yellow)%h%Cred%d %Cblue%aN %Cgreen%ar %Creset%s'
  lgs = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  last = log -1 HEAD
  cherry-pick = crp
[core]
  editor = subl -n -w
[gc]
  auto = 1
[merge]
  tool = sublimerge
[mergetool]
  prompt = false
[mergetool "sublimerge"]
  cmd = subl -n --wait \"$REMOTE\" \"$BASE\" \"$LOCAL\" \"$MERGED\" --command \"sublimerge_diff_views\"
  trustExitCode = false
[diff]
  tool = sublimerge
[difftool]
  prompt = false
[difftool "sublimerge"]
  cmd = subl -n --wait \"$REMOTE\" \"$LOCAL\" --command \"sublimerge_diff_views {\\\"left_read_only\\\": true, \\\"right_read_only\\\": true}\"
